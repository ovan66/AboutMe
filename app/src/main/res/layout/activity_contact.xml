<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cl.bastian.aboutbastian.ContactActivity">

    <TextView
        android:id="@+id/linkedinTv"
        android:drawableLeft="@mipmap/ic_linkedin_black_24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:gravity="center"
        android:padding="16dp"
        android:text="Linkedin"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/phoneTv"
        android:drawableLeft="@mipmap/ic_phone_black_24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:gravity="center"
        android:padding="16dp"
        android:text="Llamar"
        android:textSize="24sp" />

    <fragment
        android:id="@+id/emailFragment"
        android:name="cl.bastian.aboutbastian.EmailFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        tools:layout="@layout/fragment_email" />

</LinearLayout>
